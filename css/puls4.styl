gris_oscuro = #444
gris_texto = #7A7A7A
azul = #22BCE0
naranja = #DD4F24

a 
	color naranja
	
body
	background #E8E8E8 
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background naranja
	color rgba(white,0.5)
	padding 1em 0
	text-align center
	width 100%
	h3
		font-size 14px
		font-weight normal

		strong
			display block 

		.mejor
			&:before
			&:after
				content " - "
	
header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1
	
	.logo
		border-right 1px solid azul
		float left
		width 60px
		
		img
			width 52px
			
	.titular
		margin 0 60px 0 70px
		
		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none
			
		.publicar
			background naranja
			color white
			float right
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			font-size italic
			text-decoration none
			text-shadow 1px 1px 0px black	
		
		.titulo
			font-size 18px
			font-weight normal 
			margin 0
			padding 0
			
	.usuario
		position absolute
		right 10px
		top 10px
		
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%
				
		.flechita
			background naranja
			color white
			display block
			position absolute
			right 0
			text-align right
			top 15px
			width 50%

nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		position absolute
		top 0
		left 0
	
	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		
		li
			display inline-block
			
			a 
				color white
				display block
				margin 0 0.5em 
				padding 0 0.2em
				text-decoration none
				
.posts
	padding 0.5em
	
	.post
		background white
		box-shadow 2px 2px 10px rgba(black, 0.5)
		border-radius 0 0 0.5em 0.5em
		color gris_texto
		
	.acciones
		border-top 3px solid azul
		padding 0.5em
		
	.descripcion
		color gris_texto
				
		.imagen
			img
				height 160px
				width 120px
	
